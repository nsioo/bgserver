        <view type="create">
            <ref>
                <actions>
                    <action>
                        <group name="main" refType="main|sub"></group>
                    </action>
                </actions>
                <views>
                    <view type="list" model="crmPartnerEventRel" ownerField="magPartners" refType="sub"></view>
                </views>
            </ref>
            <field name="name" type="singleLineText" style="head"></field>
            <field name="budgetCost" type="singleLineText" style="subHead"></field>
            <field name="actualCost" type="singleLineText" style="subHead"></field>
            <field name="startTime" type="date"></field>
            <field name="endTime" type="date"></field>
            <field name="comment" type="multiLineText"></field>
            <field name="magPartners" style="relation"></field>
        </view>
        <view type="detail">
            <ref>
                <actions>
                    <action>
                        <group name="main" refType="main|sub"></group>
                    </action>
                </actions>
            </ref>
            <field name="name" type="static" style="head"></field>
            <field name="budgetCost" type="static" style="subHead"></field>
            <field name="actualCost" type="static" style="subHead"></field>
            <field name="startTime" type="static"></field>
            <field name="endTime" type="static"></field>
            <field name="comment" type="static"></field>
            <field name="magPartners" style="relation"></field>
            <field name="leads" style="relation"></field>
            <field name="customers" style="relation"></field>
        </view>
