<ui>
    <inherit>
        <xpath expression="/ui/model[@app='core'][@name='partner']/view/list" op="append" app="core">
            <field name="department"></field>
        </xpath>

        <xpath expression="/ui/model[@app='core'][@name='corp']/view/create" op="append" app="core">
            <field name="department"></field>
        </xpath>

        <xpath expression="/ui/model[@app='core'][@name='partnerRole']/view/edit" op="append" app="core">
            <field name="department"></field>
        </xpath>

        <xpath expression="/ui/model[@app='core'][@name='partner']/view[@type='create']/field[@name='setCurrentCorpAsDefault']" op="insertAfter" app="core">
            <field name="departments.name" type="many2OneDataSetSelect"></field>
        </xpath>

        <xpath expression="/ui/model[@app='core'][@name='partner']/view[@type='edit']/field[@name='setCurrentCorpAsDefault']" op="insertAfter" app="core">
            <field name="departments.name" type="many2OneDataSetSelect"></field>
        </xpath>

        <xpath expression="/ui/model[@app='core'][@name='partner']/view[@type='detail']/field[@name='setCurrentCorpAsDefault']" op="insertAfter" app="core">
            <field name="departments.name" type="many2OneDataSetSelect"></field>
        </xpath>

        <xpath expression="/ui/model[@app='core'][@name='partner']/view[@type='detail']/field[@name='partnerRoles']" op="insertAfter" app="core">
            <field name="departments" style="relation"></field>
        </xpath>
        <xpath expression="/ui/model[@app='core'][@name='partner']/view[@type='detail']/ref/views" op="append" app="core">
            <view type="detail" refType="none" ownerField="departments" model="department" app="corp"></view>
        </xpath>
    </inherit>

    <model name="department" app="corp">
        <view type="list">
            <ref>
                <actions>
                    <action>
                        <group name="selSingleItemAction" refType="singleSelection"></group>
                    </action>
                    <action>
                        <group name="main" refType="main|sub|singleSelection"></group>
                    </action>
                    <action>
                        <group name="opAction" refType="main|sub"></group>
                    </action>
                </actions>
            </ref>
            <field name="id"></field>
            <field name="name" type="singleLineText"></field>
            <field name="parent.name" type="many2OneDataSetSelect"></field>
            <field name="comment" type="multiLineText"></field>
        </view>
        <view type="create">
            <ref>
                <actions>
                    <action>
                        <group name="main"  refType = "main"></group>
                    </action>
                </actions>
                <menus>
                </menus>
                <views>
                    <view type="list" ownerField="partners" app="corp" model="departmentPartnerRel" refType="sub|main">
                    </view>
                </views>
            </ref>
            <field name="name" type="singleLineText" style="head"></field>
            <field name = "parent.name" type="many2OneDataSetSelect"></field>
            <field name="comment" type="multiLineText"></field>
            <field name="partners" style="relation"></field>
        </view>
        <view type="edit">
            <ref>
                <actions>
                    <action>
                        <group name="main"  refType = "main"></group>
                    </action>
                </actions>
                <views>
                    <view type="list" ownerField="children" refType="sub|main">
                    </view>
                    <view type="list" ownerField="partners" app="core" model="partner" refType="sub|main">
                    </view>
                    <view type="edit" ownerField="parent" refType="sub|main">
                    </view>
                </views>
            </ref>

            <field name="name" type="singleLineText" style="head"></field>
            <field name = "parent.name" type="many2OneDataSetSelect"></field>
            <field name="comment" type="multiLineText"></field>
            <field name="children" style="relation"></field>
            <field name="partners" style="relation"></field>
            <field name="parent" style="relation"></field>
        </view>
        <view type="detail">
            <ref>
                <actions>
                    <action>
                        <group name="main"  refType = "main"></group>
                    </action>
                </actions>
                <views>
                    <view type="list" ownerField="children" refType="sub|main">
                    </view>
                    <view type="list" ownerField="partners" app="core" model="partner" refType="sub|main">
                    </view>
                    <view type="detail" ownerField="parent" refType="sub|main">
                    </view>
                </views>
            </ref>
            <field name="name" type="static" style="head"></field>
            <field name = "parent.name" type="static"></field>
            <field name="comment" type="static"></field>
            <field name="children" style="relation"></field>
            <field name="partners" style="relation"></field>
            <field name="parent" style="relation"></field>
        </view>
    </model>

    <model name="departmentPartnerRel" app="corp">
        <view type="list">
            <ref>
                <actions>
                    <action>
                        <group name="main" refType="main|sub"></group>
                    </action>
                    <action>
                        <group name="opAction" refType="main|sub"></group>
                    </action>
                </actions>
            </ref>
            <field name="partner.id"></field>
            <field name="partner.userName"></field>
            <field name="partner.name"></field>
            <field name="partner.nickName"></field>
            <field name="partner.userComment"></field>
        </view>
        <view type="edit">

        </view>
        <view type="detail">

        </view>
        <view type="create">
            <ref>
                <actions>
                    <action>
                        <group name="main" refType="main|sub"></group>
                    </action>
                </actions>
            </ref>
            <field name="partner.userName" type="many2OneDataSetSelect"></field>
        </view>
    </model>

</ui>
